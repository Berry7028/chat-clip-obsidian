{
  "manifest_version": 2,
  "name": "ChatVault Clip â€” AI Chat to Obsidian",
  "version": "0.1.0",
  "description": "Save AI chat conversations from ChatGPT, Claude and more to your Obsidian vault.",
  "icons": {
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["activeTab", "storage", "clipboardWrite", "https://chat.openai.com/*", "https://claude.ai/*", "https://gemini.google.com/*", "https://aistudio.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://claude.ai/*", "https://gemini.google.com/*", "https://aistudio.google.com/*"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "3728a58e-4fc4-47f0-8e78-02368b160b67@example.com"
    }
  }
}
