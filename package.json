{
  "name": "chatvault-clip",
  "version": "0.1.0",
  "description": "Chrome extension to save AI chat conversations to Obsidian vaults",
  "private": true,
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "react-textarea-autosize": "^8.5.3",
    "turndown": "^7.1.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "scripts": {
    "dev:chromium": "webpack --watch --env browser=chromium --config webpack.dev.js",
    "dev:firefox": "webpack --watch --env browser=firefox --config webpack.dev.js",
    "build:chromium": "webpack --env browser=chromium --config webpack.config.js",
    "build:firefox": "webpack --env browser=firefox --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze:chromium": "npm run build:chromium && npx webpack-bundle-analyzer dist-chromium/static/js/*.js",
    "analyze:firefox": "npm run build:firefox && npx webpack-bundle-analyzer dist-firefox/static/js/*.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/core": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "axe-core": "^4.10.3",
    "babel-jest": "^30.0.2",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jsdom": "^26.1.0",
    "mini-css-extract-plugin": "^2.9.0",
    "playwright": "^1.53.2",
    "tailwindcss": "^3.4.4",
    "webpack": "^5.92.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/*.{test,spec}.{js,jsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/setupTests.js",
      "!src/index.js"
    ]
  }
}
